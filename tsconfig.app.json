{
  "compilerOptions": {
    "types": ["react", "react-dom"],
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@styles/*": ["src/app/styles/*"],
      "@icons/*": ["src/shared/assets/icons/*"],
      "@img/*": ["src/shared/assets/img/*"],
      "@fonts/*": ["src/shared/assets/fonts/*"],
      "@app/*": ["src/app/*"],
      "@shared/*": ["src/shared/*"],
      "@entities/*": ["src/entities/*"],
      "@features/*": ["src/features/*"],
      "@widgets/*": ["src/widgets/*"],
      "@pages/*": ["src/pages/*"]
    },

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleDetection": "force",
    "resolveJsonModule": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "outDir": "dist",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true, // extra
    "noPropertyAccessFromIndexSignature": false, // dynamic fields: obj.key => obj['key']
    "noUncheckedIndexedAccess": false, // dynamic fields: obj.key => obj['key'].length
    "noImplicitReturns": false // all returns - not toggled
  },
  "include": ["src", "index.tsx"],
  "exclude": ["node_modules", "dist"]
}
