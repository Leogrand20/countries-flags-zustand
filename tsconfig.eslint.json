{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["node"]
  },
  "include": [
    "src",
    "index.tsx",
    "eslint.config.ts",
    "vite.config.ts",
    "webpack.alias.ts"
  ],
  "exclude": ["dist", "node_modules"]
}
